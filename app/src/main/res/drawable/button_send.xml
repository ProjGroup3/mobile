<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape>
            <solid android:color="@color/colorPrimaryDark" />
            <corners android:radius="8dp" />
            <padding android:bottom="5dp" android:left="10dp" android:right="10dp" android:top="5dp" />
            <stroke android:width="3dp" android:color="@color/colorBlue1" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/colorGrey1" />
            <corners android:radius="8dp" />
            <padding android:bottom="5dp" android:left="10dp" android:right="10dp" android:top="5dp" />
            <stroke android:width="3dp" android:color="@color/colorGrey1" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/colorPrimaryDark" />
            <corners android:radius="8dp" />
            <padding android:bottom="5dp" android:left="10dp" android:right="10dp" android:top="5dp" />
            <stroke android:width="3dp" android:color="@color/colorBlue1" />
        </shape>
    </item>

</selector>